<% layout("./layouts/boilerplate") %>
<style>
    #homepage {
    width: 100% !important;
    margin-left: 10px !important;
    margin-right: 10px !important;
}
.cards {
    border-radius: 10px;
}
.card-img-top {
    border-radius: 7px;
    height: 300px;
}
.card {
    border: none;
    width: 300px;
    height: 420px;
    margin-bottom: 25px;
}
.card-text {
    color: black;
}
.card a {
    text-decoration: none !important; /* Remove underline for anchor tags within the card */
    color: inherit; /* Inherit text color from the card */
}
.card:hover {
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
}
.card-img-overlay{
    opacity: 0;
    padding-left: 0px !important;
}
.card-img-overlay:hover{
    opacity: 0.2;
    background-color: white;
}
.card-body{
    padding-left: 0px !important;
    padding-top: 0px !important;
    margin-top: 8px;
}
</style>
<link rel="stylesheet" href="../public/home.css">

<div class="container-fluid">
    <div id="homepage" class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
        <% for(let listing of listings){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <a href="/listing/<%= listing._id %>">
                    <div class="card cards" style="width: 100%;">
                        <img src="<%= listing.image %>" class="card-img-top" alt="image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %> , <%= listing.country %></b><br>
                                &#x20B9; <%= listing.price %>/night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
